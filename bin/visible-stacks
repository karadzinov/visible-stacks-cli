#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Illuminate\Container\Container;
use Illuminate\Events\Dispatcher;
use Illuminate\Console\Application;
use VisibleStacks\Commands\VisibleStacksCommand;

$container = new Container();
$events = new Dispatcher($container);

$application = new Application($container, $events, 'VisibleStacks CLI', '1.0');
$application->add(new VisibleStacksCommand());
$application->setDefaultCommand('visible:stacks', true);

$application->run();
